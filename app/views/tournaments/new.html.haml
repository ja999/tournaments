.container
  = simple_form_for tournament, html: { class: 'form-horizontal' } do |f|
    .row
      .col-lg-12
        = f.input :name
    .row
      .col-lg-12
        = f.input :discipline
    .row
      .col-lg-12
        = f.input :max_participants
    .row
      .col-lg-12
        = f.input :time_of_event, as: :datetime
    .row
      .col-lg-12
        = f.input :deadline, as: :datetime
    .row
      .col-lg-12
        = f.submit 'Save', class: 'btn btn-default'
